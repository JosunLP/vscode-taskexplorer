{
	"extends": "../../../tsconfig.json",
	"compilerOptions": {
		"jsx": "react",
		"outDir": "../../",
		// "rootDir": "../..",
		"tsBuildInfoFile": "../../../node_modules/.cache/tsconfig.webview.tsbuildinfo",
		"useDefineForClassFields": false,
		"lib": [
			"DOM", "DOM.Iterable", "ES2020"
		],
		"paths": {
			":env/*": [ "src/lib/env/web/*", "src/webview/common/env/web/*" ],
			":types": [ "../../..types" ]
		},
		"rootDirs": [
			".",
			"../common"
		]
	},
	"include": [
		"./**/*",
		"../common/ipc.ts"
	],
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode",
        "test-fixture",
        "script",
        "types",
        "res",
        "dist",
        "doc",
        ".nyc_output",
        ".coverage",
        "src/test/**/*",
        "**/common/node/**/*",
    ]
}
