{
	"extends": "../../../tsconfig.base.json",
	"compilerOptions": {
		"jsx": "react",
		"outDir": "../../",
		// "rootDir": "../..",
		"tsBuildInfoFile": "../../../.vscode/tsconfig.webapp.tsbuildinfo",
		"useDefineForClassFields": false,
		"lib": [
			"DOM", "DOM.Iterable", "ES2020"
		],
		"paths": {
			"@env/*": [ "src/lib/env/browser/*" ]
		},
		"rootDirs": [
			".",
			"../common"
		]
	},
	"include": [
		"./**/*",
		"../../../types/lib/**/*",
		"../common/ipc.ts"
	],
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode",
        "test-fixture",
        "script",
        "types",
        "res",
        "dist",
        "doc",
        ".nyc_output",
        ".coverage",
        "src/test/**/*"
    ]
}
