{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"strict": true,
		"outDir": "lib",
		"rootDir": "../src/interface",
		"composite": true,
        "declaration": true,
        "declarationMap": true,
		"emitDeclarationOnly": false,
		"downlevelIteration": true
	},
	"include": ["../src/interface"],
	"exclude": [
		"../src/common",
		"../src/commands",
		"../src/providers",
		"../src/test",
		"../src/tree",
		"../src/webview",
		"../src/extension.*"
	]
}
