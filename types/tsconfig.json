{
    "extends": "../tsconfig.json",
	"compilerOptions": {
        "declaration": true,
        "declarationMap": false,
		"emitDeclarationOnly": true,
		"isolatedModules": false,
		"outDir": "./dist",
        "paths": {
			":env/*": [ "src/lib/env/node/*", "src/webview/common/env/node/*" ],
			":types": [ "types" ]
		},
		"rootDir": "../src",
		// "rootDirs": [ "../src", "." ],
		"sourceMap": false,
		"tsBuildInfoFile": "../node_modules/.cache/tsconfig.types.tsbuildinfo"
	},
	"include": [
		"../src",
        // "./index.ts"
	],
    "exclude": [
        "../.coverage",
        "../.nyc_output",
        "../.vscode",
        "../.vscode-test",
        "../dist",
        "../doc",
        "../node_modules",
        "../res",
        "../script",
        "../src/test/**/*",
        "../src/webview/**/*",
        "../src/lib/env/web/**",
        "../src/webview/common/env/web/**",
        "../test-fixture",
        "**/dist/**/*"
    ]
}
