{
	"compilerOptions": {
		"composite": true,
        "declaration": true,
        "declarationMap": true,
		"emitDeclarationOnly": false,
		"lib": [ "es2020" ],
		"module": "commonjs",
		"outDir": "lib",
		"rootDir": "../src/interface",
		"sourceMap": false,
		"strict": true,
		"target": "es2020",
		"tsBuildInfoFile": "../.vscode/tsconfig.types.tsbuildinfo"
	},
	"include": [
		"../src/interface"
	],
	"exclude": [
		"../src/common",
		"../src/commands",
		"../src/providers",
		"../src/test",
		"../src/tree",
		"../src/webview",
		"../src/*.*"
	]
}
