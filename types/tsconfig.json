{
    "extends": "../tsconfig.json",
	"compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": false,
		"emitDeclarationOnly": true,
		"isolatedModules": false,
		"outDir": "./dist",
        "paths": {
			":env/*": [ "../src/lib/env/node/*", "../src/lib/env/web/*" ]
		},
        "rootDirs": [
            ".",
            "../src/interface",
            "../src/webview/common"
        ],
		"sourceMap": false,
		"tsBuildInfoFile": "../node_modules/.cache/tsconfig.types.tsbuildinfo"
	},
	"include": [
        "./index.ts"
	],
    "exclude": [
        "../.*",
        "../dist",
        "../doc",
        "../node_modules",
        "../res",
        "../script",
        "../src/webview/app",
        "../**/test"
    ]
}
