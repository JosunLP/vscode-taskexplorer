{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist/browser",
		"lib": [
			"dom", "dom.iterable", "es2020"
		],
		"paths": {
			":env/*": ["src/lib/env/browser/*"],
			":types": [ "types" ],
			"path": ["node_modules/path-browserify"]
		},
		"tsBuildInfoFile": "node_modules/.cache/tsconfig.browser.tsbuildinfo"
	},
    "exclude": [
        ".coverage",
        ".nyc_output",
        ".vscode",
        ".vscode-test",
        "dist",
        "doc",
        "node_modules",
        "res",
        "script",
        "src/test/**/*",
        "src/webview/app/**/*",
        "src/lib/env/node/**/*",
        "test-fixture",
        "types"
    ]
}
