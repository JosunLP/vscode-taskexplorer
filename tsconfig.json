{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        // "declaration": true,
        // "declarationDir": "types/dist",
        "paths": {
			":env/*": [ "src/lib/env/node/*" ],
			":types": [ "types" ]
		},
		"rootDir": "src",
		"tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo"
		// "typeRoots": [ "types" ]
    },
	"include": [
		"src"
	],
    "exclude": [
        ".coverage",
        ".nyc_output",
        ".vscode",
        ".vscode-test",
        "dist",
        "doc",
        "node_modules",
        "res",
        "script",
        "src/test/**/*",
        "src/webview/app/**/*",
        "src/lib/env/browser/**/*",
        "test-fixture",
        "types"
    ]
}
