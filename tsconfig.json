{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
		"baseUrl": ".",
		"rootDir": "src",
		"tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
        "paths": {
			"@env/*": [ "src/lib/env/node/*" ]
		}
    },
	"include": [
		"src"
	],
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode",
        "test-fixture",
        "script",
        "types",
        "res",
        "dist",
        "doc",
        ".nyc_output",
        ".coverage",
        "src/test/**/*",
        "src/webview/app/**/*",
        "src/lib/env/browser/**/*"
    ]
}
