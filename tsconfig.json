{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
		"baseUrl": ".",
        "esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": [
			"es2020"
		],
        "module": "commonjs",
		"moduleResolution": "node",
		"noImplicitOverride": true,
        "noUnusedLocals": false,
        "noEmitOnError": true,
        "paths": {
			":env/*": [ "src/lib/env/node/*", "src/webview/common/env/node/*" ],
			":types": [ "types" ]
		},
		"skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
		"useDefineForClassFields": true,
		"useUnknownInCatchVariables": false
    },
	"include": [
		"src"
	],
    "exclude": [
        ".coverage",
        ".nyc_output",
        ".vscode",
        ".vscode-test",
        "dist",
        "doc",
        "node_modules",
        "res",
        "script",
        "src/test/**/*",
        "src/webview/app/**/*",
        "src/lib/env/web/**/*",
        "test-fixture",
        "types"
    ]
}
