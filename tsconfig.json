{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "types/dist",
        "paths": {
			":env/*": [ "src/lib/env/node/*" ],
			":types": [ "types" ]
		},
		"rootDir": "src",
		"tsBuildInfoFile": "../node_modules/.cache/tsconfig.tsbuildinfo"
		// "typeRoots": [ "types" ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode",
        "test-fixture",
        "script",
        "types",
        "res",
        "dist",
        "doc",
        ".nyc_output",
        ".coverage",
        "src/test/**/*",
        "src/webview/app/**/*",
        "src/lib/env/browser/**/*"
    ]
}
