{
    "extends": "./tsconfig.base.json",
    // "ts-node": {"require": ["tsconfig-paths/register"]},
    "compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": false,
		"rootDir": "src",
		"tsBuildInfoFile": "dist/tsconfig.test.tsbuildinfo",
        "paths": {
			"@env/*": [ "src/lib/env/node/*" ],
			"@types": [ "types" ]
		}
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode",
        "test-fixture",
        "script",
        "types",
        "res",
        "doc",
        "dist",
        ".nyc_output",
        ".coverage",
        "src/webview/app/**/*",
        "src/lib/env/browser/**/*"
    ]
}