{
    "extends": "./tsconfig.base.json",
    // "ts-node": {"require": ["tsconfig-paths/register"]},
    "compilerOptions": {
		"isolatedModules": false,
        "outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",
		"tsBuildInfoFile": ".vscode/tsconfig.test.tsbuildinfo",
        "paths": {
			"@env/*": [ "src/lib/env/node/*" ]
		}
    },
	"include": [
		"src"
	],
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode",
        "test-fixture",
        "script",
        "types",
        "res",
        "doc",
        "dist",
        ".nyc_output",
        ".coverage",
        "src/webview/app/**/*",
        "src/lib/env/browser/**/*"
    ]
}