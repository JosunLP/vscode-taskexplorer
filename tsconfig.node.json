{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
			":env/*": [ "src/lib/env/node/*", "src/webview/common/env/node/*" ],
			":types": [ "types" ]
		},
		"rootDir": "src",
		"tsBuildInfoFile": "./node_modules/.cache/tsconfig.node.tsbuildinfo"
		// "typeRoots": [ "types" ]
    },
	"include": [
		"src"
	],
    "exclude": [
        ".coverage",
        ".nyc_output",
        ".vscode",
        ".vscode-test",
        "dist",
        "doc",
        "node_modules",
        "res",
        "script",
        "src/test/**",
        "src/webview/app/**",
        "**/env/web/**",
        "test-fixture",
        "types"
    ]
}
