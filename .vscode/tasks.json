{
    "version": "2.0.0",
    "tasks": [
    {
        "type": "npm",
        "script": "tsc-watch",
        "problemMatcher": "$tsc-watch",
        "isBackground": true,
        "presentation": {
            "reveal": "never"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "type": "npm",
        "script": "webpack-watch",
        "problemMatcher": {
            "owner": "typescript",
            "pattern": [
                {
                    "regexp": "\\[tsl\\] ERROR",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            ],
            "background": {
                "activeOnStart": true,
                // Webpack watch output, or we hang
                "beginsPattern": "Entrypoint\\s+extension",
                "endsPattern": "compiled\\s+successfully\\s+in\\s+[0-9]+\\s+ms"
            }
        },
        "isBackground": true,
        "presentation": {
            "reveal": "always"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "type": "npm",
        "script": "tsc-build",
        "problemMatcher": [
            "$tsc"
        ]
    },
    {
        "label": "Publish to Codecov",
        "type": "shell",
        "command": "${env:CODE_HOME}\\git\\bin\\bash.exe",
        "args": [
            "tools/codecov.sh",
            "-t",
            "${env:CODECOV_TOKEN}"
        ],
        "group": "build",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        }
    }]
}