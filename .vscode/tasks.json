{
    "version": "2.0.0",
    "tasks": [
    {
        "type": "npm",
        "script": "tsc-watch",
        "problemMatcher": "$tsc-watch",
        "isBackground": true,
        "presentation": {
            "reveal": "never"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "type": "npm",
        "script": "webpack-watch",
        "problemMatcher": "$webpackTe",
        "isBackground": true,
        "presentation": {
            "reveal": "always"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "type": "npm",
        "script": "tsc-build",
        "problemMatcher": [
            "$tsc"
        ]
    },
    {
        "label": "Publish to Codecov",
        "type": "shell",
        "command": "${env:CODE_HOME}\\git\\bin\\bash.exe",
        "args": [
            "tools/codecov.sh",
            "-t",
            "${env:CODECOV_TOKEN}"
        ],
        "group": "none",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        }
    },
    {
        "label": "Publish Types Package",
        "type": "shell",
        "command": "npm publish",
        "options": {
            "cwd": "types"
        },
        "group": "none",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        }
    }]
}