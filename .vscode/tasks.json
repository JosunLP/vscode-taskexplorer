{
    "version": "2.0.0",
    "tasks": [
    {
        "type": "npm",
        "script": "watch",
       // "problemMatcher": "$webpackTe",
        "isBackground": true,
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "group": {
            "kind": "test"
        },
        "problemMatcher": {
            "owner": "javascript",
            "source": "javascript",
            "pattern": [
                {
                    "regexp": "\\[tsl\\] ERROR",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            ],
            "background": {
                "activeOnStart": true,
                "beginsPattern": "[a-z]+\\:[a-z]\\:",
                "endsPattern": "compiled\\s+successfully\\s+in\\s+[0-9]+\\s+ms"
            }
        }
    },
    {
        "label": "Publish Types Package",
        "type": "shell",
        "command": "npm publish",
        "options": {
            "cwd": "types"
        },
        "group": "none",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        }
    }]
}