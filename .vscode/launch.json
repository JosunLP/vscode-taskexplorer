// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (TSC)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "smartStep": true,
			"sourceMaps": true,
			"sourceMapRenames": true,
			"trace": true,
            "preLaunchTask": "npm: tsc-watch",
            "debugWebviews": true,
			"rendererDebugOptions": {
				"pauseForSourceMap": true,
				"sourceMapRenames": true,
				"sourceMaps": true,
				// "urlFilter": "*eamodio.gitlens*",
				"webRoot": "${workspaceFolder}/res"
			},
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"
            ],
			"args": [
                "--profile=Debugging (TaskExplorer)",
                "--disable-extensions",
                "--disable-workspace-trust",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Launch (TSC)(Project Root)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "smartStep": true,
			"sourceMaps": true,
			"sourceMapRenames": true,
			"trace": true,
            "preLaunchTask": "npm: tsc-watch",
			"rendererDebugOptions": {
				"pauseForSourceMap": true,
				"sourceMapRenames": true,
				"sourceMaps": true,
				"webRoot": "${workspaceFolder}/src/webviews/apps"
			},
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"
            ],
            "args": [
                "--disable-extensions",
                "--disable-workspace-trust",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "${workspaceRoot}"
            ]
        },
        {
            "name": "Launch (TSC)(TestFixture Root)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "smartStep": true,
			"sourceMaps": true,
			"sourceMapRenames": true,
			"trace": true,
			"debugWebviews": true,
            "preLaunchTask": "npm: tsc-watch",
			"rendererDebugOptions": {
				"pauseForSourceMap": true,
				"sourceMapRenames": true,
				"sourceMaps": true,
				"webRoot": "${workspaceFolder}/src/webviews/apps"
			},
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"
            ],
            "args": [
                "${workspaceFolder}/test-fixture/tests.code-workspace",
				"--disable-extensions",
                "--disable-workspace-trust",
				"--extensionDevelopmentPath=${workspaceFolder}"
			]
        },
        {
            "name": "Launch (TSC)(GEMS2 Root)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "smartStep": true,
			"sourceMaps": true,
			"sourceMapRenames": true,
			"trace": true,
            "preLaunchTask": "npm: tsc-watch",
			"debugWebviews": true,
			"rendererDebugOptions": {
				"pauseForSourceMap": true,
				"sourceMapRenames": true,
				"sourceMaps": true,
				"webRoot": "${workspaceFolder}/src/webviews/apps"
			},
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"
            ],
            "args": [
                "${workspaceRoot}/../GEMS2",
                "--disable-extensions",
                "--disable-workspace-trust",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
			"name": "Launch (Webpack)(TestFixture Root)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
            "smartStep": true,
			"sourceMaps": true,
			"sourceMapRenames": true,
			"trace": true,
            "autoAttachChildProcesses": true,
			"preLaunchTask": "npm: webpack-watch",
			"debugWebviews": true,
			"rendererDebugOptions": {
				"pauseForSourceMap": true,
				"sourceMapRenames": true,
				"sourceMaps": true,
				"webRoot": "${workspaceFolder}/src/webviews/apps"
			},
			"outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"
            ],
			"args": [
                "${workspaceFolder}/test-fixture/tests.code-workspace",
				"--disable-extensions",
                "--disable-workspace-trust",
				"--extensionDevelopmentPath=${workspaceFolder}"
			]
		},
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "smartStep": true,
			"sourceMaps": true,
			"sourceMapRenames": true,
			"trace": true,
            "preLaunchTask": "npm: test:before",
            "postDebugTask": "npm: test:after",
            "debugWebviews": true,
			"rendererDebugOptions": {
				"pauseForSourceMap": true,
				"sourceMapRenames": true,
				"sourceMaps": true,
				"webRoot": "${workspaceFolder}/src/webviews/apps"
			},
			"outFiles": [
                "${workspaceFolder}/dist/test/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**", "**/node_modules/**", "**/resources/app/out/vs/**"
            ],
            "args": [
                "${workspaceFolder}/test-fixture/project1",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/dist/test/suite",
                "--disable-extensions",
                "--disable-workspace-trust"
            ]
        }
    ]
}