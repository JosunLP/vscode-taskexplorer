// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",

    "mochaExplorer.ui": "tdd",
    "mochaExplorer.files": "dist/test/**/*.js",
    "mochaExplorer.require": "ts-node/register",
    "mochaExplorer.launcherScript": "node_modules/mocha-explorer-launcher-scripts/vscode-test",
    "mochaExplorer.autoload": true,
    "mochaExplorer.ipcRole": "server",
    "mochaExplorer.ipcTimeout": 10000,
    "testExplorer.codeLens": true,
    "testExplorer.gutterDecoration": true,
    "mochaExplorer.mochaPath": "dist/test",
    "mochaExplorer.env": {
    "VSCODE_VERSION": "insiders",
        "ELECTRON_RUN_AS_NODE": null
    },
    "cSpell.words": [
        "akefile",
        "antfu",
        "bdist",
        "cobertura",
        "cpptools",
        "Currin",
        "dups",
        "eamodio",
        "Hmmmmmm",
        "lcov",
        "loadingna",
        "myproject",
        "namee",
        "nocase",
        "noscripts",
        "noworkspace",
        "Pipenv",
        "pkief",
        "scottmeesseman",
        "testv",
        "tiansin",
        "tsbuildinfo",
        "uild",
        "vsix",
        "vslauncher"
    ]
}