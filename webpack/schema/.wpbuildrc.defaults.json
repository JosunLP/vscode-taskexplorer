{
    "$schema": "https://app1.spmeesseman.com/res/app/wpbuild/v0.0.1/.wpbuildrc.schema.json",
    "name": "vscode-taskexplorer",
    "displayName": "Task Explorer",
    "detailedDisplayName": "Task Explorer VSCode Extension",
    "publicInfoProject": true,
    "source": "typescript",
    "builds": [
        {
            "name": "main",
            "debug": false,
            "hash": true,
            "log": {
                "color": "cyan"
            },
            "plugins": {
                "licensefiles": true
            },
            "vscode": {
                "type": "extension"
            }
        }
    ],
    "development":
    {
        "builds": [
            { "name": "main", "bundleDts": true }
        ]
    },
    "production":
    {
        "builds": [
            { "name": "main" }
        ]
    },
    "test":
    {
        "builds": [
            { "name": "main" },
            {
                "name": "tests",
                "log": {
                    "color": "yellow",
                    "pad": {
                        "value": 60
                    }
                },
                "debug": true,
                "paths": {
                    "dist": "dist/test",
                    "src": "src/tests"
                },
                "plugins": {
                    "istanbul": false
                },
                "vscode": {
                    "type": "tests"
                }
            }
        ]
    },
    "log":
    {
        "level": 2,
        "valueMaxLineLength": 100,
        "pad": {
            "base": 0,
            "envTag": 22,
            "value": 45,
            "uploadFileName": 50
        },
        "colors":
        {
            "default": "grey"
        }
    },
    "paths":
    {
        "base": ".",
        "ctx": ".",
        "dist": "dist",
        "src": "src",
        "temp": "node_modules/.cache/wpbuild/temp"
    },
    "exports":
    {
        "cache": true,
        "devtool": true,
        "experiments": true,
        "externals": true,
        "ignorewarnings": true,
        "minification": false,
        "optimization": true,
        "watch": true
    },
    "plugins":
    {
        "banner": false,
        "ignore": true,
        "istanbul": false,
        "licensefiles": false,
        "loghooks": true,
        "optimization": true,
        "progress": false,
        "scm": false,
        "sourcemaps": true,
        "vendormod": true
    },
    "vscode": {
        "type": "none"
    }
}