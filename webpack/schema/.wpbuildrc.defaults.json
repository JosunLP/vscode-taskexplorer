{
    "$schema": "https://app1.spmeesseman.com/res/app/wpbuild/v0.0.1/.wpbuildrc.schema.json",
    "name": "vscode-taskexplorer",
    "displayName": "Task Explorer",
    "detailedDisplayName": "Task Explorer VSCode Extension",
    "publicInfoProject": true,
    "source": "typescript",
    "builds": [
        {
            "name": "main",
            "debug": false,
            "log": {
                "color": "cyan"
            },
            "plugins": {
                "licensefiles": true
            }
        }
    ],
    "development":
    {
        "builds": [
            { "name": "main" }
        ]
    },
    "production":
    {
        "builds": [
            { "name": "main" }
        ]
    },
    "test":
    {
        "builds": [
            { "name": "main" },
            {
                "name": "tests",
                "log": {
                    "color": "yellow",
                    "pad": {
                        "value": 60
                    }
                },
                "paths": {
                    "dist": "dist/test",
                    "src": "src/tests"
                },
                "plugins": {
                    "istanbul": false
                }
            }
        ]
    },
    "log":
    {
        "level": 2,
        "valueMaxLineLength": 100,
        "pad": {
            "base": 0,
            "envTag": 22,
            "value": 45,
            "uploadFileName": 50
        },
        "colors":
        {
            "default": "grey"
        }
    },
    "paths":
    {
        "base": ".",
        "ctx": ".",
        "dist": "dist",
        "src": "src",
        "temp": "node_modules/.cache/wpbuild/temp"
    },
    "exports":
    {
        "cache": true,
        "devtool": true,
        "experiments": true,
        "externals": true,
        "ignorewarnings": true,
        "minification": false,
        "optimization": true,
        "watch": true
    },
    "plugins":
    {
        "banner": true,
        "clean": true,
        "copy": true,
        "html": true,
        "ignore": true,
        "istanbul": false,
        "licensefiles": false,
        "loghooks": true,
        "optimization": true,
        "progress": false,
        "runtimevars": true,
        "scm": false,
        "sourcemaps": true,
        "testsuite": false,
        "tscheck": true,
        "upload": true,
        "vendormod": true,
        "wait": false
    },
    "vscode": {
        "extension": false,
        "languageServer": false
    }
}