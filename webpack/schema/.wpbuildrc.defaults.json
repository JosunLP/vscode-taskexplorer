{
    "$schema": "https://app1.spmeesseman.com/res/app/wpbuild/v0.0.1/.wpbuildrc.schema.json",
    "name": "vscode-taskexplorer",
    "displayName": "Task Explorer",
    "detailedDisplayName": "Task Explorer VSCode Extension",
    "publicInfoProject": true,
    "builds": [
        {
            "name": "main",
            "target": "node",
            "type": "module",
            "log": {
                "color": "cyan"
            }
        }
    ],
    "development":
    {
        "builds": [
            { "name": "main" }
        ]
    },
    "testproduction":
    {
        "builds": [
            { "name": "main" },
            {
                "name": "tests",
                "log": {
                    "color": "yellow",
                    "pad": {
                        "value": 60
                    }
                },
                "paths": {
                    "dist": "dist/test",
                    "src": "src/tests"
                }
            }
        ]
    },
    "production":
    {
        "builds": [
            { "name": "main" }
        ]
    },
    "test":
    {
        "builds": [
            { "name": "main" },
            {
                "name": "tests",
                "log": {
                    "color": "yellow",
                    "pad": {
                        "value": 60
                    }
                },
                "paths": {
                    "dist": "dist/test",
                    "src": "src/tests"
                }
            }
        ]
    },
    "log":
    {
        "level": 2,
        "valueMaxLineLength": 100,
        "pad": {
            "base": 0,
            "envTag": 22,
            "value": 45,
            "uploadFileName": 50
        },
        "colors":
        {
            "default": "grey"
        }
    },
    "paths":
    {
        "ctx": ".",
        "dist": "dist",
        "distTests": "dist/test",
        "src": "src",
        "srcTests": "src/test"
    },
    "exports":
    {
        "cache": true,
        "devtool": true,
        "entry": true,
        "experiments": true,
        "externals": true,
        "ignorewarnings": true,
        "minification": false,
        "optimization": true,
        "output": true,
        "plugins": true,
        "resolve": true,
        "rules": true,
        "stats": true,
        "watch": true
    },
    "plugins":
    {
        "analyze": true,
        "banner": true,
        "clean": true,
        "copy": true,
        "dispose": true,
        "environment": true,
        "hash": true,
        "html": true,
        "ignore": false,
        "istanbul": true,
        "licensefiles": true,
        "loghooks": true,
        "optimization": true,
        "progress": false,
        "runtimevars": true,
        "scm": true,
        "sourcemaps": true,
        "testsuite": true,
        "tscheck": true,
        "upload": true,
        "vendormod": true,
        "wait": false
    },
    "vscode": {
        "extension": false,
        "languageserver": false
    }
}