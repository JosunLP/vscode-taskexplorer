{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "patternProperties": {
                "^.*\/\\.wpbuildrc\\.schema\\.json$": {
                  "type": "string"
                }
            }
        },
        "name": {
            "type": "string",
            "minLength": 3
        },
        "displayName": {
            "type": "string",
            "minLength": 3
        },
        "detailedDisplayName": {
            "type": "string",
            "minLength": 10
        },
        "publicInfoProject": {
            "type": "boolean"
        },
        "builds": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                  "anyOf": [
                    {"type": "string"},
                    {"type": "null"}
                  ]
                }
            },
            "additionalProperties": false
        },
        "colors": {
            "$ref": "#/$defs/WpBuildColorsDefinition"
        },
        "environment": {
            "type": "object",
            "properties": {
                "dev": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                },
                "testprod": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                },
                "prod": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                },
                "test": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                }
            },
            "additionalProperties": false,
            "required": [
                "dev",
                "testprod",
                "prod",
                "test"
            ]
        },
        "log": {
            "$ref": "#/$defs/WpBuildLogDefinition"
        },
        "paths": {
            "$ref": "#/$defs/WpBuildPathsDefinition"
        },
        "exports": {
            "type": "object",
            "properties": {
                "cache": {
                    "type": "boolean"
                },
                "context": {
                    "type": "boolean"
                },
                "devtool": {
                    "type": "boolean"
                },
                "entry": {
                    "type": "boolean"
                },
                "experiments": {
                    "type": "boolean"
                },
                "externals": {
                    "type": "boolean"
                },
                "ignorewarnings": {
                    "type": "boolean"
                },
                "minification": {
                    "type": "boolean"
                },
                "mode": {
                    "type": "boolean"
                },
                "name": {
                    "type": "boolean"
                },
                "optimization": {
                    "type": "boolean"
                },
                "output": {
                    "type": "boolean"
                },
                "plugins": {
                    "type": "boolean"
                },
                "resolve": {
                    "type": "boolean"
                },
                "rules": {
                    "type": "boolean"
                },
                "stats": {
                    "type": "boolean"
                },
                "target": {
                    "type": "boolean"
                },
                "watch": {
                    "type": "boolean"
                }
            },
            "required": [
                "context",
                "entry",
                "mode",
                "name",
                "optimization",
                "output",
                "plugins",
                "resolve",
                "rules",
                "target"
            ]
        },
        "plugins": {
            "type": "object",
            "properties": {
                "analyze": {
                    "type": "boolean"
                },
                "banner": {
                    "type": "boolean"
                },
                "build": {
                    "type": "boolean"
                },
                "clean": {
                    "type": "boolean"
                },
                "copy": {
                    "type": "boolean"
                },
                "environment": {
                    "type": "boolean"
                },
                "hash": {
                    "type": "boolean"
                },
                "html": {
                    "type": "boolean"
                },
                "ignore": {
                    "type": "boolean"
                },
                "istanbul": {
                    "type": "boolean"
                },
                "licensefiles": {
                    "type": "boolean"
                },
                "loghooks": {
                    "type": "boolean"
                },
                "optimization": {
                    "type": "boolean"
                },
                "progress": {
                    "type": "boolean"
                },
                "runtimevars": {
                    "type": "boolean"
                },
                "scm": {
                    "type": "boolean"
                },
                "sourcemaps": {
                    "type": "boolean"
                },
                "testsuite": {
                    "type": "boolean"
                },
                "tscheck": {
                    "type": "boolean"
                },
                "upload": {
                    "type": "boolean"
                },
                "vendormod": {
                    "type": "boolean"
                },
                "wait": {
                    "type": "boolean"
                }
            },
            "required": [
                "environment",
                "optimization"
            ]
        },
        "vscode": {
            "type": "object",
            "properties": {
                "webview": {
                    "type": "object",
                    "properties": {
                        "baseDir": {
                            "type": "string",
                            "minLength": 1
                        },
                        "apps": {
                            "type": "object",
                            "patternProperties": {
                                "^.*$": {
                                "anyOf": [
                                    {"type": "string"},
                                    {"type": "null"}
                                ]
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "baseDir",
                        "apps"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "webview"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "displayName",
        "environment",
        "modules",
        "paths",
        "exports",
        "plugins"
    ],
    "$defs":
    {
        "WebpackMode":  {
            "type": "string",
            "oneOf": [
                {
                    "const": "development"
                },
                {
                    "const": "production"
                },
                {
                    "const": "none"
                }
            ]
        },
        "WebpackTarget":  {
            "type": "string",
            "oneOf": [
                {
                    "const": "node"
                },
                {
                    "const": "web"
                },
                {
                    "const": "webworker"
                }
            ]
        },
        "WpBuildEnvironment": {
            "type": "string",
            "oneOf": [
                {
                    "const": "dev"
                },
                {
                    "const": "prod"
                },
                {
                    "const": "test"
                },
                {
                    "const": "testprod"
                }
            ]
        },
        "WpBuildEnvironmentDefinition": {
            "type": "object",
            "properties": {
                "builds": {
                    "type": "array",
                    "uniqueItems": true,
                    "minItems": 1,
                    "items": {
                        "properties": {
                            "build": {
                                "type": "string",
                                "minLength": 1
                            },
                            "mode": {
                                "$ref": "#/$defs/WebpackMode"
                            },
                            "environment": {
                                "$ref": "#/$defs/WpBuildEnvironment"
                            },
                            "target": {
                                "$ref": "#/$defs/WebpackTarget"
                            }
                        },
                        "additionalProperties": false,
                        "required": [
                            "build"
                        ]
                    }
                },
                "overrides": {
                    "type": "object",
                    "properties": {
                        "colors": {
                            "$ref": "#/$defs/WpBuildColorsDefinition"
                        },
                        "log": {
                            "$ref": "#/$defs/WpBuildLogDefinition"
                        },
                        "paths": {
                            "$ref": "#/$defs/WpBuildPathsDefinition"
                        }
                    },
                    "additionalProperties": false,
                    "required": []
                }
            },
            "additionalProperties": false,
            "required": [
                "builds"
            ]
        },
        "WpBuildLogColor": {
            "type": "string",
            "oneOf": [
                {
                    "const": "black"
                },
                {
                    "const": "blue"
                },
                {
                    "const": "cyan"
                },
                {
                    "const": "green"
                },
                {
                    "const": "grey"
                },
                {
                    "const": "magenta"
                },
                {
                    "const": "red"
                },
                {
                    "const": "white"
                },
                {
                    "const": "yellow"
                }
            ]
        },
        "WpBuildColorsDefinition" : {
            "type": "object",
            "properties": {
                "default": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "buildBracket": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "buildText": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "infoIcon": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "valueStar": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "valueStarText": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "tagBracket": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "tagText": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "uploadSymbol": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "builds": {
                    "patternProperties": {
                        "^.*$": {
                            "$ref": "#/$defs/WpBuildLogColor"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "default"
            ]
        },
        "WpBuildLogLevel": {
            "type": "number",
            "oneOf": [
                {
                    "const": 0,
                    "description": "No logging"
                },
                {
                    "const": 1,
                    "description": "Logging level 1 - Errors, warnings, and function start/end"
                },
                {
                    "const": 2,
                    "description": "Logging level 2 - Level 1 + parameter values"
                },
                {
                    "const": 3,
                    "description": "Logging level 3 - Level 2 + non-looping processing detail"
                },
                {
                    "const": 4,
                    "description": "Logging level 4 - Level 3 + looping processing detail"
                },
                {
                    "const": 5,
                    "description": "Logging level 5 - Verbose"
                }
            ]
        },
        "WpBuildLogDefinition": {
            "type": "object",
            "properties": {
                "level": {
                    "$ref": "#/$defs/WpBuildLogLevel"
                },
                "pad": {
                    "$ref": "#/$defs/WpBuildLogPadDefinition"
                },
                "valueMaxLineLength": {
                    "type": "number"
                }
            },
            "additionalProperties": false,
            "required": []
        },
        "WpBuildLogPadDefinition": {
            "type": "object",
            "properties": {
                "base": {
                    "type": "number"
                },
                "envTag": {
                    "type": "number"
                },
                "value": {
                    "type": "number"
                },
                "uploadFileName": {
                    "type": "number"
                }
            },
            "additionalProperties": false,
            "required": []
        },
        "WpBuildPathsDefinition": {
            "type": "object",
            "properties": {
                "dist": {
                    "type": "string",
                    "minLength": 1
                },
                "distTests": {
                    "type": "string",
                    "minLength": 1
                },
                "src": {
                    "type": "string",
                    "minLength": 1
                },
                "srcTests": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false,
            "required": [
                "dist",
                "distTests",
                "src",
                "srcTests"
            ]
        }
    }
}