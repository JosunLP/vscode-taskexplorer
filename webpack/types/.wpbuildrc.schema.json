{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "patternProperties": {
                "^.*\/\\.wpbuildrc\\.schema\\.json$": {
                  "type": "string"
                }
            }
        },
        "name": {
            "type": "string",
            "minLength": 3
        },
        "displayName": {
            "type": "string",
            "minLength": 3
        },
        "detailedDisplayName": {
            "type": "string",
            "minLength": 10
        },
        "publicInfoProject": {
            "type": "boolean"
        },
        "builds": {
            "$ref": "#/$defs/StringValueObject"
        },
        "colors": {
            "$ref": "#/$defs/WpBuildColorsDefinition",
            "required": [
                "default"
            ]
        },
        "environment": {
            "type": "object",
            "properties": {
                "dev": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                },
                "testprod": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                },
                "prod": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                },
                "test": {
                    "$ref": "#/$defs/WpBuildEnvironmentDefinition"
                }
            },
            "additionalProperties": false,
            "required": [
                "dev",
                "testprod",
                "prod",
                "test"
            ]
        },
        "log": {
            "$ref": "#/$defs/WpBuildLogDefinition",
            "required": []
        },
        "paths": {
            "$ref": "#/$defs/WpBuildPathsDefinition",
            "required": [
                "dist",
                "src"
            ]
        },
        "exports": {
            "type": "object",
            "properties": {
                "cache": {
                    "type": "boolean"
                },
                "context": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "devtool": {
                    "type": "boolean"
                },
                "entry": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "experiments": {
                    "type": "boolean"
                },
                "externals": {
                    "type": "boolean"
                },
                "ignorewarnings": {
                    "type": "boolean"
                },
                "minification": {
                    "type": "boolean"
                },
                "mode": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "name": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "optimization": {
                    "type": "boolean"
                },
                "output": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "plugins": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "resolve": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "rules": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "stats": {
                    "type": "boolean"
                },
                "target": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "watch": {
                    "type": "boolean"
                }
            }
        },
        "plugins": {
            "type": "object",
            "properties": {
                "analyze": {
                    "type": "boolean",
                    "default": false
                },
                "banner": {
                    "type": "boolean",
                    "default": true
                },
                "clean": {
                    "type": "boolean",
                    "default": false
                },
                "copy": {
                    "type": "boolean",
                    "default": false
                },
                "environment": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "html": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "ignore": {
                    "type": "boolean",
                    "default": true
                },
                "istanbul": {
                    "type": "boolean",
                    "default": false
                },
                "licensefiles": {
                    "type": "boolean",
                    "default": true
                },
                "loghooks": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "optimization": {
                    "type": "boolean",
                    "const": true,
                    "readOnly": true
                },
                "progress": {
                    "type": "boolean",
                    "default": false
                },
                "runtimevars": {
                    "type": "boolean",
                    "default": false
                },
                "scm": {
                    "type": "boolean",
                    "default": false
                },
                "sourcemaps": {
                    "type": "boolean",
                    "default": true
                },
                "testsuite": {
                    "type": "boolean",
                    "default": false
                },
                "tscheck": {
                    "type": "boolean",
                    "default": true
                },
                "upload": {
                    "type": "boolean",
                    "default": false
                },
                "vendormod": {
                    "type": "boolean",
                    "default": true
                },
                "wait": {
                    "type": "boolean",
                    "default": false
                }
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "builds",
        "name",
        "displayName",
        "environment",
        "paths",
        "exports",
        "plugins"
    ],
    "$defs":
    {
        "DirPathValueObject": {
            "type": "object",
            "propertyNames": {
                "minLength": 3,
                "maxLength": 20,
                "pattern": "^[a-z][a-zA-Z0-9_]+$"
            },
            "additionalProperties": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_][a-zA-Z0-9\\._\\-\\\\\\/]+$",
                "minLength": 3,
                "maxLength": 75
            }
        },
        "FilePathValueObject": {
            "type": "object",
            "propertyNames": {
                "minLength": 3,
                "maxLength": 20,
                "pattern": "^[a-z][a-zA-Z0-9_]+$"
            },
            "additionalProperties": {
                "type": "string",
                "pattern": "^\\.[\\\\\\/][a-zA-Z0-9_][a-zA-Z0-9\\._\\-\\\\\\/]+\\.([cm]?jsx?|tsx?)$",
                "minLength": 3,
                "maxLength": 85
            },
            "description": "mapping of module names to respective file that is the entry point",
            "examples": "elative path to a file that is the entry point, path must start with a leading \"./\""

        },
        "StringValueObject": {
            "type": "object",
            "propertyNames": {
                "minLength": 3,
                "maxLength": 20,
                "pattern": "^[a-z][a-zA-Z0-9_]+$"
            },
            "patternProperties": {
                "^.*$": {
                    "type": "string"}
            },
            "additionalProperties": false

        },
        "StringOrNUllValueObject": {
            "type": "object",
            "propertyNames": {
                "minLength": 3,
                "maxLength": 20,
                "pattern": "^[a-z][a-zA-Z0-9_]+$"
            },
            "patternProperties": {
                "^.*$": {
                    "anyOf": [
                        {"type": "string"},
                        {"type": "null"}
                    ]
                }
            },
            "additionalProperties": false

        },
        "WebpackMode":  {
            "type": "string",
            "oneOf": [
                {
                    "const": "development"
                },
                {
                    "const": "production"
                },
                {
                    "const": "none"
                },
                {
                    "const": "test"
                },
                {
                    "const": "testproduction"
                }
            ]
        },
        "WebpackTarget":  {
            "type": "string",
            "oneOf": [
                {
                    "const": "node"
                },
                {
                    "const": "web"
                },
                {
                    "const": "webworker"
                }
            ]
        },
        "WpBuildEnvironmentDefinition": {
            "type": "object",
            "properties": {
                "builds": {
                    "type": "array",
                    "uniqueItems": true,
                    "minItems": 1,
                    "items": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "minLength": 3
                            },
                            "build": {
                                "type": "string",
                                "minLength": 1
                            },
                            "entry": {
                                "$ref": "#/$defs/FilePathValueObject"
                            },
                            "mode": {
                                "$ref": "#/$defs/WebpackMode"
                            },
                            "target": {
                                "$ref": "#/$defs/WebpackTarget"
                            },
                            "overrides": {
                                "$ref": "#/$defs/WpBuildOverridesDefinition"
                            }
                        },
                        "additionalProperties": false,
                        "required": [
                            "name",
                            "build"
                        ]
                    }
                },
                "overrides": {
                    "$ref": "#/$defs/WpBuildOverridesDefinition"
                }
            },
            "additionalProperties": false
        },
        "WpBuildLogColor": {
            "type": "string",
            "oneOf": [
                {
                    "const": "black"
                },
                {
                    "const": "blue"
                },
                {
                    "const": "cyan"
                },
                {
                    "const": "green"
                },
                {
                    "const": "grey"
                },
                {
                    "const": "magenta"
                },
                {
                    "const": "red"
                },
                {
                    "const": "white"
                },
                {
                    "const": "yellow"
                }
            ]
        },
        "WpBuildColorsDefinition" : {
            "type": "object",
            "properties": {
                "default": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "buildBracket": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "buildText": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "infoIcon": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "valueStar": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "valueStarText": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "tagBracket": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "tagText": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "uploadSymbol": {
                    "$ref": "#/$defs/WpBuildLogColor"
                },
                "builds": {
                    "type": "object",
                    "propertyNames": {
                        "minLength": 3,
                        "maxLength": 20,
                        "pattern": "^[a-z][a-zA-Z0-9_]+$"
                    },
                    "patternProperties": {
                        "^.*$": {
                            "$ref": "#/$defs/WpBuildLogColor"
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "WpBuildLogLevel": {
            "type": "number",
            "oneOf": [
                {
                    "const": 0,
                    "description": "No logging"
                },
                {
                    "const": 1,
                    "description": "Logging level 1 - Errors, warnings, and function start/end"
                },
                {
                    "const": 2,
                    "description": "Logging level 2 - Level 1 + parameter values"
                },
                {
                    "const": 3,
                    "description": "Logging level 3 - Level 2 + non-looping processing detail"
                },
                {
                    "const": 4,
                    "description": "Logging level 4 - Level 3 + looping processing detail"
                },
                {
                    "const": 5,
                    "description": "Logging level 5 - Verbose"
                }
            ]
        },
        "WpBuildLogDefinition": {
            "type": "object",
            "properties": {
                "level": {
                    "$ref": "#/$defs/WpBuildLogLevel"
                },
                "pad": {
                    "$ref": "#/$defs/WpBuildLogPadDefinition"
                },
                "valueMaxLineLength": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "WpBuildLogPadDefinition": {
            "type": "object",
            "properties": {
                "base": {
                    "type": "number"
                },
                "envTag": {
                    "type": "number"
                },
                "value": {
                    "type": "number"
                },
                "uploadFileName": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "WpBuildOverridesDefinition":  {
            "type": "object",
            "properties": {
                "colors": {
                    "$ref": "#/$defs/WpBuildColorsDefinition"
                },
                "log": {
                    "$ref": "#/$defs/WpBuildLogDefinition"
                },
                "paths": {
                    "$ref": "#/$defs/WpBuildPathsDefinition"
                }
            },
            "additionalProperties": false
        },
        "WpBuildPathsDefinition": {
            "$ref": "#/$defs/DirPathValueObject",
            "properties": {
                "dist": {
                    "type": "string",
                    "minLength": 1
                },
                "src": {
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    }
}