{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "WpBuild configuration file schema",
    "title": "WpBuildRcSchema",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "pattern": "^.*\/\\.wpbuildrc\\.schema\\.json$"
        },
        "name": {
            "type": "string",
            "minLength": 3
        },
        "displayName": {
            "type": "string",
            "minLength": 3
        },
        "detailedDisplayName": {
            "type": "string",
            "minLength": 10
        },
        "publicInfoProject": {
            "type": "boolean",
            "default": false
        },
        "builds": {
            "$ref": "#/$defs/WpBuildRcBuilds"
        },
        "development": {
            "$ref": "#/$defs/WpBuildRcEnvironment"
        },
        "log": {
            "$ref": "#/$defs/WpBuildRcLog"
        },
        "paths": {
            "$ref": "#/$defs/WpBuildRcPaths"
        },
        "exports": {
            "$ref": "#/$defs/WpBuildRcExports"
        },
        "plugins": {
            "$ref": "#/$defs/WpBuildRcPlugins"
        },
        "production": {
            "$ref": "#/$defs/WpBuildRcEnvironment"
        },
        "test": {
            "$ref": "#/$defs/WpBuildRcEnvironment"
        },
        "testproduction": {
            "$ref": "#/$defs/WpBuildRcEnvironment"
        },
        "vscode": {
            "type": "object",
            "title": "WpBuildRcVsCode",
            "properties": {
                "testsEntry": {
                    "type": "string",
                    "pattern": "^\\.[\\\\\\/][a-zA-Z0-9_][a-zA-Z0-9\\._\\-\\\\\\/]+\\.([cm]?jsx?|tsx?)$",
                    "examples": [
                        "relative path to a file that is the entry point for the vscode=electron test runner, path must start with a leading \"./\", relative to the project root direcrory"
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": [
        "name"
    ],
    "$defs":
    {
        "WpBuildRcEnvironment": {
            "type": "object",
            "properties": {
                "builds": {
                    "$ref": "#/$defs/WpBuildRcBuilds"
                },
                "log": {
                    "$ref": "#/$defs/WpBuildRcLog"
                },
                "paths": {
                    "$ref": "#/$defs/WpBuildRcPaths"
                },
                "exports": {
                    "$ref": "#/$defs/WpBuildRcExports"
                },
                "plugins": {
                    "$ref": "#/$defs/WpBuildRcPlugins"
                }
            },
            "additionalProperties": false,
            "required": [
                "builds"
            ]
        },
        "WpBuildRcBuilds": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/WpBuildRcBuild"
            }
        },
        "WpBuildRcBuild": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 3
                },
                "entry": {
                    "$ref": "#/$defs/WebpackEntry"
                },
                "mode": {
                    "$ref": "#/$defs/WpBuildWebpackMode"
                },
                "target": {
                    "$ref": "#/$defs/WebpackTarget"
                },
                "log": {
                    "$ref": "#/$defs/WpBuildRcLog"
                },
                "paths": {
                    "$ref": "#/$defs/WpBuildRcPaths"
                },
                "exports": {
                    "$ref": "#/$defs/WpBuildRcExports"
                },
                "plugins": {
                    "$ref": "#/$defs/WpBuildRcPlugins"
                }
            },
            "additionalProperties": false,
            "required": [
                "name"
            ]
        },
        "WpBuildRcExports": {
            "type": "object",
            "properties": {
                "cache": {
                    "type": "boolean"
                },
                "context": {
                    "const": true,
                    "readOnly": true
                },
                "devtool": {
                    "type": "boolean"
                },
                "entry": {
                    "const": true,
                    "readOnly": true
                },
                "experiments": {
                    "type": "boolean"
                },
                "externals": {
                    "type": "boolean"
                },
                "ignorewarnings": {
                    "type": "boolean"
                },
                "minification": {
                    "type": "boolean"
                },
                "mode": {
                    "const": true,
                    "readOnly": true
                },
                "name": {
                    "const": true,
                    "readOnly": true
                },
                "optimization": {
                    "type": "boolean"
                },
                "output": {
                    "const": true,
                    "readOnly": true
                },
                "plugins": {
                    "const": true,
                    "readOnly": true
                },
                "resolve": {
                    "const": true,
                    "readOnly": true
                },
                "rules": {
                    "const": true,
                    "readOnly": true
                },
                "stats": {
                    "type": "boolean"
                },
                "target": {
                    "const": true,
                    "readOnly": true
                },
                "watch": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        },
        "WpBuildRcLog": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "number",
                    "title": "WpBuildLogLevel",
                    "default": 2,
                    "oneOf": [
                        {
                            "const": 0,
                            "description": "No logging"
                        },
                        {
                            "const": 1,
                            "description": "Logging level 1 - Errors, warnings, and function start/end"
                        },
                        {
                            "const": 2,
                            "description": "Logging level 2 - Level 1 + parameter values"
                        },
                        {
                            "const": 3,
                            "description": "Logging level 3 - Level 2 + non-looping processing detail"
                        },
                        {
                            "const": 4,
                            "description": "Logging level 4 - Level 3 + looping processing detail"
                        },
                        {
                            "const": 5,
                            "description": "Logging level 5 - Verbose"
                        }
                    ],
                    "additionalProperties": false
                },
                "valueMaxLineLength": {
                    "type": "number",
                    "default": 100,
                    "minValue": 50,
                    "maxValue": 200
                },
                "colors": {
                    "type": "object",
                    "title": "WpBuildRcLogColors",
                    "properties": {
                        "default": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "buildBracket": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "buildText": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "infoIcon": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "valueStar": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "valueStarText": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "tagBracket": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "tagText": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        },
                        "uploadSymbol": {
                            "$ref": "#/$defs/WpBuildLogTrueColor"
                        }
                    },
                    "additionalProperties": false,
                    "required": []
                },
                "pad": {
                    "type": "object",
                    "title": "WpBuildRcLogPad",
                    "properties": {
                        "base": {
                            "type": "number",
                            "default": 0
                        },
                        "envTag": {
                            "type": "number",
                            "default": 25
                        },
                        "value": {
                            "type": "number",
                            "default": 45
                        },
                        "uploadFileName": {
                            "type": "number",
                            "default": 50
                        }
                    },
                    "additionalProperties": false,
                    "required": []
                }
            },
            "additionalProperties": false
        },
        "WpBuildRcPaths": {
            "type": "object",
            "properties": {
                "dist": {
                    "type": "string",
                    "default": "dist",
                    "pattern": "^[a-zA-Z0-9_][~@!\\w\\.\\-\\\\\\/]+$",
                    "minLength": 3,
                    "maxLength": 100
                },
                "src": {
                    "type": "string",
                    "default": "src",
                    "pattern": "^[a-zA-Z0-9_][~@!\\w\\.\\-\\\\\\/]+$",
                    "minLength": 3,
                    "maxLength": 100
                }
            },
            "additionalProperties": false
        },
        "WpBuildRcPlugins": {
            "type": "object",
            "properties": {
                "analyze": {
                    "type": "boolean",
                    "default": false
                },
                "banner": {
                    "type": "boolean",
                    "default": true
                },
                "clean": {
                    "type": "boolean",
                    "default": false
                },
                "copy": {
                    "type": "boolean",
                    "default": false
                },
                "environment": {
                    "const": true,
                    "readOnly": true
                },
                "html": {
                    "const": true,
                    "readOnly": true
                },
                "ignore": {
                    "type": "boolean",
                    "default": true
                },
                "istanbul": {
                    "type": "boolean",
                    "default": false
                },
                "licensefiles": {
                    "type": "boolean",
                    "default": true
                },
                "loghooks": {
                    "const": true,
                    "readOnly": true
                },
                "optimization": {
                    "const": true,
                    "readOnly": true
                },
                "progress": {
                    "type": "boolean",
                    "default": false
                },
                "runtimevars": {
                    "type": "boolean",
                    "default": false
                },
                "scm": {
                    "type": "boolean",
                    "default": false
                },
                "sourcemaps": {
                    "type": "boolean",
                    "default": true
                },
                "testsuite": {
                    "type": "boolean",
                    "default": false
                },
                "tscheck": {
                    "type": "boolean",
                    "default": true
                },
                "upload": {
                    "type": "boolean",
                    "default": false
                },
                "vendormod": {
                    "type": "boolean",
                    "default": true
                },
                "wait": {
                    "type": "boolean",
                    "default": false
                }
            },
            "additionalPropertes": false
        },
        "WpBuildLogTrueColor": {
            "type": "string",
            "oneOf": [
                {
                    "const": "black"
                },
                {
                    "const": "blue"
                },
                {
                    "const": "cyan"
                },
                {
                    "const": "green"
                },
                {
                    "const": "grey"
                },
                {
                    "const": "magenta"
                },
                {
                    "const": "red"
                },
                {
                    "const": "system"
                },
                {
                    "const": "white"
                },
                {
                    "const": "yellow"
                }
            ]
        },
        "WpBuildLogColor": {
            "type": "string",
            "oneOf": [
                {
                    "const": "black"
                },
                {
                    "const": "blue"
                },
                {
                    "const": "cyan"
                },
                {
                    "const": "green"
                },
                {
                    "const": "grey"
                },
                {
                    "const": "magenta"
                },
                {
                    "const": "red"
                },
                {
                    "const": "system"
                },
                {
                    "const": "white"
                },
                {
                    "const": "yellow"
                },
                {
                    "const": "bold"
                },
                {
                    "const": "inverse"
                },
                {
                    "const": "italic"
                },
                {
                    "const": "underline"
                }
            ],
            "additionalProperties": false
        },
        "WpBuildWebpackMode":  {
            "type": "string",
            "default": "production",
            "oneOf": [
                {
                    "const": "development"
                },
                {
                    "const": "production"
                },
                {
                    "const": "none"
                },
                {
                    "const": "test"
                },
                {
                    "const": "testproduction"
                }
            ],
            "additionalProperties": false
        },
        "WebpackEntry": {
            "type": "object",
            "description": "mapping of module names to respective file that is the entry point",
            "propertyNames": {
                "minLength": 3,
                "maxLength": 20,
                "pattern": "^[a-z][a-zA-Z0-9_]+$"
            },
            "properties": {
                "import": {
                    "type": "string",
                    "pattern": "^\\.[\\\\\\/][a-zA-Z0-9_][a-zA-Z0-9\\._\\-\\\\\\/]+\\.([cm]?jsx?|tsx?)$",
                    "minLength": 3,
                    "maxLength": 85
                },
                "dependsOn": {
                    "type": "string",
                    "pattern": "^[a-z][a-zA-Z0-9_]+$"
                }
            },
            "additionalProperties": {
                "type": "string",
                "pattern": "^\\.[\\\\\\/][a-zA-Z0-9_][a-zA-Z0-9\\._\\-\\\\\\/]+\\.([cm]?jsx?|tsx?)$",
                "minLength": 3,
                "maxLength": 85
            },
            "examples": [
                {
                    "modulename": {
                        "import": "./path/to/entrymodule.ts"
                    }
                },
                {
                    "modulename1": {
                        "import": "./path/to/entrymodule1.ts"
                    },
                    "modulename2": {
                        "import": "./path/to/entrymodule2.ts",
                        "dependOn": "modulename1"
                    }
                }
            ],
            "required": [
                "import"
            ]
        },
        "WebpackTarget":  {
            "type": "string",
            "default": "web",
            "oneOf": [
                {
                    "const": "node"
                },
                {
                    "const": "web"
                },
                {
                    "const": "webworker"
                },
                {
                    "const": "async-node"
                },
                {
                    "const": "node-webkit"
                },
                {
                    "const": "electron-main"
                },
                {
                    "const": "electron-renderer"
                },
                {
                    "const": "electron-preload"
                },
                {
                    "const": "nwjs"
                },
                {
                    "const": "esX"
                },
                {
                    "const": "browserlist"
                }
            ]
        }
    }
}