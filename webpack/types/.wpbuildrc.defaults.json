{
    "$schema": "https://app1.spmeesseman.com/res/app/wpbuild/v0.0.1/.wpbuildrc.schema.json",
    "name": "wpbuild",
    "publicInfoProject": false,
    "log":
    {
        "level": 2,
        "valueMaxLineLength": 100,
        "pad": {
            "base": 0,
            "envTag": 22,
            "value": 40,
            "uploadFileName": 50
        },
        "colors":
        {
            "default": "grey",
            "buildBracket": "blue",
            "buildText": "white",
            "infoIcon": "magenta",
            "valueStar": "cyan",
            "valueStarText": "white",
            "tagBracket": "blue",
            "tagText": "white",
            "uploadSymbol": "yellow"
        }
    },
    "paths":
    {
        "dist": "dist",
        "src": "src"
    },
    "exports":
    {
        "cache": true,
        "context": true,
        "devtool": true,
        "entry": true,
        "experiments": true,
        "externals": true,
        "ignorewarnings": true,
        "minification": false,
        "mode": true,
        "name": true,
        "optimization": true,
        "output": true,
        "plugins": true,
        "resolve": true,
        "rules": true,
        "stats": true,
        "target": true,
        "watch": true
    },
    "plugins":
    {
        "analyze": true,
        "banner": true,
        "clean": true,
        "copy": true,
        "dispose": true,
        "environment": true,
        "hash": true,
        "html": true,
        "ignore": false,
        "istanbul": true,
        "licensefiles": true,
        "loghooks": true,
        "optimization": true,
        "progress": false,
        "runtimevars": true,
        "scm": true,
        "sourcemaps": true,
        "testsuite": true,
        "tscheck": true,
        "upload": true,
        "vendormod": true,
        "wait": false
    },
    "vscode": {
        "testsEntry": "./src/test/runTest.ts"
    }
}