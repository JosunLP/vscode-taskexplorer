{
    "$schema": "file:C:\\Projects\\vscode-taskexplorer\\webpack\\types\\.wpbuildrc.schema.json",
    "name": "vscode-taskexplorer",
    "displayName": "Task Explorer",
    "detailedDisplayName": "Task Explorer VSCode Extension",
    "publicInfoProject": true,
    "colors":
    {
        "default": "grey",
        "buildBracket": "blue",
        "buildText": "white",
        "infoIcon": "magenta",
        "valueStar": "cyan",
        "valueStarText": "white",
        "tagBracket": "blue",
        "tagText": "white",
        "uploadSymbol": "yellow",
        "builds": {
            "extension": "blue",
            "tests": "white",
            "types": "magenta",
            "web": "cyan",
            "webapp": "cyan"
        }
    },
    "environment":
    {
        "development":
        {
            "builds": [
                { "name": "taskexplorer", "build": "extension", "mode": "development", "target": "node" },
                {
                    "name": "webapp",
                    "build": "webapp",
                    "mode": "development",
                    "target": "webworker",
                    "entry": {
                        "home": "./home/home.ts",
                        "license": "./license/license.ts",
                        "monitor": "./monitor/monitor.tsx",
                        "parsingReport": "./parsingReport/parsingReport.ts",
                        "releaseNotes": "./releaseNotes/releaseNotes.ts",
                        "taskCount": "./taskCount/taskCount.ts",
                        "taskDetails": "./taskDetails/taskDetails.ts",
                        "taskUsage": "./taskUsage/taskUsage.ts",
                        "welcome": "./welcome/welcome.ts"
                    },
                    "overrides": {
                        "paths": {
                            "src": "src/webview/app"
                        }
                    }
                }
            ],
            "overrides": {
                "colors": {
                    "buildBracket": "yellow"
                }
            }
        },
        "testprod":
        {
            "builds": [
                { "name": "taskexplorer", "build": "extension", "mode": "production", "target": "node" },
                { "name": "webapp", "build": "webapp", "mode": "production", "target": "webworker" },
                { "name": "tests", "build": "tests", "mode": "none", "target": "node" }
            ],
            "overrides": {
                "log": {
                    "pad": {
                        "value": 60
                    }
                }
            }
        },
        "production":
        {
            "builds": [
                { "name": "taskexplorer","build": "extension", "mode": "production", "target": "node" },
                { "name": "webapp", "build": "webapp", "mode": "production", "target": "webworker" }
            ],
            "overrides": {
                "colors": {
                    "buildBracket": "yellow"
                }
            }
        },
        "test":
        {
            "builds": [
                { "name": "taskexplorer", "build": "extension", "target": "node" },
                { "name": "webapp", "build": "webapp", "target": "webworker" }
            ],
            "overrides": {
                "colors": {
                    "buildBracket": "yellow"
                },
                "log": {
                    "pad": {
                        "value": 60
                    }
                }
            }
        }
    },
    "log":
    {
        "level": 2,
        "valueMaxLineLength": 100,
        "pad": {
            "base": 0,
            "envTag": 22,
            "value": 40,
            "uploadFileName": 50
        }
    },
    "paths":
    {
        "dist": "dist",
        "distTests": "dist/test",
        "distWebapps": "res",
        "src": "src",
        "srcTests": "src/test",
        "srcWebapps": "src/webview/app"
    },
    "exports":
    {
        "cache": true,
        "context": true,
        "devtool": true,
        "entry": true,
        "experiments": true,
        "externals": true,
        "ignorewarnings": true,
        "minification": false,
        "mode": true,
        "name": true,
        "optimization": true,
        "output": true,
        "plugins": true,
        "resolve": true,
        "rules": true,
        "stats": true,
        "target": true,
        "watch": true
    },
    "plugins":
    {
        "analyze": true,
        "banner": true,
        "build": true,
        "clean": true,
        "copy": true,
        "environment": true,
        "hash": true,
        "html": true,
        "ignore": false,
        "istanbul": true,
        "licensefiles": true,
        "loghooks": true,
        "optimization": true,
        "progress": false,
        "runtimevars": true,
        "scm": true,
        "sourcemaps": true,
        "testsuite": true,
        "tscheck": true,
        "upload": true,
        "vendormod": true,
        "wait": false
    },
    "vscode": {
        "testsEntry": "./src/test/runTest.ts"
    }
}