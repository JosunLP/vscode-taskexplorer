{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "JSON Schema for WpBuild",
    "description": ".wpbuildrc linter for WebpackBuild, validate json properties",
    "type": "object",
    "additionalProperties": false,
    "properties": {
