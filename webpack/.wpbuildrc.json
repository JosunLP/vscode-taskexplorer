{
    "$schema": "file:C:\\Projects\\vscode-taskexplorer\\webpack\\types\\.wpbuildrc.schema.json",
    "name": "vscode-taskexplorer",
    "displayName": "Task Explorer",
    "detailedDisplayName": "Task Explorer VSCode Extension",
    "moduleName": "taskexplorer",
    "publicInfoProject": true,
    "builds": {
        "dev": [
            { "build": "extension", "environment": "dev" },
            { "build": "webview", "environment": "dev", "target": "webworker" }
        ],
        "testprod": [
            { "build": "extension", "environment": "prod" },
            { "build": "webview", "environment": "prod", "target": "webworker" },
            { "build": "tests", "environment": "test" }
        ],
        "prod": [
            { "build": "extension" },
            { "build": "webview", "target": "webworker" }
        ],
        "test": [
            { "build": "extension", "environment": "test" },
            { "build": "webview", "environment": "dev", "target": "webworker" }
        ]
    },
    "colors":
    {
        "default": "grey",
        "buildBracket": "blue",
        "buildText": "white",
        "infoIcon": "magenta",
        "valueStar": "cyan",
        "valueStarText": "white",
        "tagBracket": "blue",
        "tagText": "white",
        "uploadSymbol": "yellow",
        "builds": {
            "extension": "blue",
            "tests": "white",
            "types": "magenta",
            "web": "cyan",
            "webview": "cyan"
        }
    },
    "environment":
    {
        "dev":
        {
            "builds": [
                { "build": "extension", "environment": "dev", "mode": "development", "target": "node" },
                { "build": "webview", "environment": "dev", "mode": "development", "target": "webworker" }
            ],
            "overrides": {
                "colors": {
                    "buildBracket": "yellow"
                }
            }
        },
        "testprod":
        {
            "builds": [
                { "build": "extension", "environment": "prod", "mode": "production", "target": "node" },
                { "build": "webview", "environment": "prod", "mode": "production", "target": "webworker" },
                { "build": "tests", "environment": "test", "mode": "none", "target": "node" }
            ],
            "overrides": {
                "log": {
                    "pad": {
                        "value": 60
                    }
                }
            }
        },
        "prod":
        {
            "builds": [
                { "build": "extension", "environment": "prod", "mode": "production", "target": "node" },
                { "build": "webview", "environment": "prod", "mode": "production", "target": "webworker" }
            ],
            "overrides": {
                "colors": {
                    "buildBracket": "yellow"
                }
            }
        },
        "test":
        {
            "builds": [
                { "build": "extension", "environment": "test" },
                { "build": "webview", "environment": "dev", "target": "webworker" }
            ],
            "overrides": {
                "colors": {
                    "buildBracket": "yellow"
                },
                "log": {
                    "pad": {
                        "value": 60
                    }
                }
            }
        },
        "test2":
        {
            "disabled": true,
            "build": [
                { "build": "extension", "environment": "test", "mode": "none", "target": "node" },
                { "build": "webview", "environment": "dev", "mode": "none", "target": "webworker" },
                { "build": "tests", "environment": "test", "mode": "none", "target": "node" }
            ],
            "overrides": {
                "colors": {
                    "buildBracket": "yellow"
                },
                "log": {
                    "pad": {
                        "value": 60
                    }
                }
            }
        }
    },
    "log":
    {
        "level": 3,
        "maxValueLineLength": 100,
        "pad": {
            "basePad": 0,
            "envTag": 22,
            "value": 40,
            "uploadFileName": 50
        }
    },
    "modules": {
        "extension": "node",
        "tests": "node",
        "types": "node",
        "web": "web",
        "webview": "webworker"
    },
    "paths":
    {
        "dist": "dist",
        "distTests": "dist/test",
        "src": "src",
        "srcTests": "src/test"
    },
    "exports":
    {
        "cache": true,
        "context": true,
        "devtool": true,
        "entry": true,
        "experiments": true,
        "externals": true,
        "ignorewarnings": true,
        "minification": false,
        "mode": true,
        "name": true,
        "optimization": true,
        "output": true,
        "plugins": true,
        "resolve": true,
        "rules": true,
        "stats": true,
        "target": true,
        "watch": true
    },
    "plugins":
    {
        "analyze": true,
        "banner": true,
        "build": true,
        "clean": true,
        "copy": true,
        "environment": true,
        "hash": true,
        "html": true,
        "ignore": false,
        "istanbul": true,
        "licensefiles": true,
        "loghooks": true,
        "optimization": true,
        "progress": false,
        "runtimevars": true,
        "scm": true,
        "sourcemaps": true,
        "testsuite": true,
        "tscheck": true,
        "upload": true,
        "vendormod": true,
        "wait": false
    },
    "vscode":
    {
        "webview": {
            "baseDir": "src/webview/app",
            "apps": {
                "home": "./home/home.ts",
                "license": "./license/license.ts",
                "monitor": "./monitor/monitor.tsx",
                "parsingReport": "./parsingReport/parsingReport.ts",
                "releaseNotes": "./releaseNotes/releaseNotes.ts",
                "taskCount": "./taskCount/taskCount.ts",
                "taskDetails": "./taskDetails/taskDetails.ts",
                "taskUsage": "./taskUsage/taskUsage.ts",
                "welcome": "./welcome/welcome.ts"
            }
        }
    }
}