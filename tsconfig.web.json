{
	"extends": "./tsconfig.json",
	"compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "types/dist",
		"lib": [
			"dom", "dom.iterable", "es2020"
		],
		"outDir": "dist/web",
		"paths": {
			":env/*": ["src/lib/env/web/*"],
			":types": [ "types" ],
			"path": ["node_modules/path-browserify"]
		},
		"rootDir": "src",
		"tsBuildInfoFile": "node_modules/.cache/tsconfig.web.tsbuildinfo"
	},
    "exclude": [
        ".coverage",
        ".nyc_output",
        ".vscode",
        ".vscode-test",
        "dist",
        "doc",
        "node_modules",
        "res",
        "script",
        "src/test/**/*",
        "src/webview/app/**/*",
        "src/lib/env/node/**/*",
        "test-fixture",
        "types"
    ]
}
